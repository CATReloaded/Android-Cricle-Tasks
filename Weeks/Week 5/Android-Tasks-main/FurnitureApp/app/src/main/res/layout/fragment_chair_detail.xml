<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChairDetailFragment">

    <ImageView
        android:id="@+id/chair_detail_imageView"
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/chair_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chair_detail_imageView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/chair_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chair_detail_name"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/chair_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chair_detail_description"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="18dp" />



</RelativeLayout>